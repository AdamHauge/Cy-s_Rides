<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="colorPrimary">@color/colorCardinal</item>
        <item name="colorPrimaryDark">@color/colorCardinalDark</item>
        <item name="colorAccent">@color/colorGold</item>
    </style>

    <style name="CustomActionBar">
        <item name="android:background">@color/colorCardinal</item>
        <item name="android:titleTextStyle">@style/CustomTextColor</item>
    </style>

    <style name="CustomTextColor">
        <item name="android:textColor">@color/colorGold</item>
    </style>

</resources>
